#
# ~/.config/bash/.bash_aliases
#

# List files
alias ls='ls --color=auto'
alias ll='ls -la'

# Default programs
alias ed=$EDITOR
alias vis=$VISUAL
alias aed=$ALTERNATE_EDITOR
alias bro=$BROWSER
alias pag=$PAGER

# Git
alias gs='git status'
alias ga='git add'
alias gap='git add -p'
alias gc='git commit'
alias gcm='git commit -m'
alias gp='git push'
alias gst='git stash'
alias gsts='git stash save --keep-index'
